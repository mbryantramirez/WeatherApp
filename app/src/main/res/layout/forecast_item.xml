<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/item_fore_date"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      />
  <TextView
      android:layout_below="@id/item_fore_date"
      android:id="@+id/item_fore_max"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      />
  <TextView
      android:layout_below="@id/item_fore_max"
      android:id="@+id/item_fore_min"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      />

</RelativeLayout>